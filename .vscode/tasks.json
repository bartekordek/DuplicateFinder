    "version": "2.0.0",
    "tasks": [
        {
            "label": "[LINUX][CMAKE][CREATE DIR]",
            "type": "shell",
            "command": "mkdir -p Build-Linux",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
